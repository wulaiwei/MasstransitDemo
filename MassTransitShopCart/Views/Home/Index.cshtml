@model List<MassTransitShopCart.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>商品名称</th>
                <th>价格</th>
                <th>库存</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                    <td><button class="btn btn-info cart">加入购物车</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>

